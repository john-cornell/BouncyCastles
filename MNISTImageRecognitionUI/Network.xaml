<Window x:Class="MNISTImageRecognition.Network"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MNISTImageRecognition"
        mc:Ignorable="d"
        Title="Network" Height="120" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="LightBlue" Height="40" HorizontalAlignment="Stretch">
            <Button Margin="10,0,0,0" Height="23" Name="BrowseButton" Width="75" HorizontalAlignment="Right" Click="BrowseButton_Click">
                Browse
            </Button>
            <Label VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="InstanceName"></Label>
            <Button Margin="10,0,0,0" Name="Test" Height="23" Width="75" Visibility="Collapsed" Click="Test_Click">Test</Button>
        </StackPanel>
        <Button Margin="0,0,10,10" Grid.Row="1" HorizontalAlignment="Right" Height="23" Width="75" VerticalAlignment="Bottom" Click="Button_Click">OK</Button>
    </Grid>
</Window>
